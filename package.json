{
  "name": "live2d_sample_for_web",
  "version": "1.0.0",
  "description": "This is live2d sample with PixiJS for web.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "run-p watch server",
    "type:check": "tsc --noEmit",
    "type:check:watch": "npm run type:check -- --watch",
    "copy:assets": "cpx \"src/assets/**\" dist",
    "copy:assets:watch": "npm run copy:assets -- --watch",
    "bundle": "webpack",
    "bundle:watch": "webpack -w",
    "build": "run-s type:check type:build bundle",
    "watch": "run-p copy:assets:watch bundle:watch",
    "server": "browser-sync start --config bs-config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run type:check"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/pixi.js": "^4.8.2",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "cpx": "^1.5.0",
    "husky": "^1.1.2",
    "npm-run-all": "^4.1.3",
    "typescript": "^3.1.3",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "pixi.js": "^4.8.2"
  }
}
